func circle(number radio)
begin
    #arc(360, radio);
	radio = 2;
	writeln radio;
end;

program
    write "Insert a number : ";
    with
        number n;
    do
        read n; # I suggest that this number be a multiple of 360
        with
            number angle = n;
        do
            while angle <= 360 do
                #rotater(n);
                circle(100);
                angle = angle + n;
            end;
        end;
    end;
end;





